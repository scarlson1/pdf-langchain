# Flask Configuration
SECRET_KEY=your-secret-key-here
SQLALCHEMY_DATABASE_URI=postgresql://postgres:password@localhost:5432/pdf_app
UPLOAD_URL=http://localhost:8000

# Redis Configuration
REDIS_URI=redis://localhost:6379/0

# Database Configuration (for local development)
POSTGRES_DB=pdf_app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# OpenAI Configuration (if using OpenAI embeddings)
OPENAI_API_KEY=your-openai-api-key

# Pinecone Configuration (if using Pinecone vector store)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment

# Langfuse Configuration (if using Langfuse for tracing)
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# AWS Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1
